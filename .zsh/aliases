### Define aliases
# Common
alias cd="z"
alias wu="cd ~w/"
alias ls="exa --icons --group-directories-first"
alias bat="bat --style=auto"
alias cat="bat"
alias tree="exa --tree"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -vI"
alias mkdir="mkdir -pv"
alias ytdl="yt-dlp --config-locations ~/.config/yt-dlp/config -o '$(wslpath $(wslvar USERPROFILE))/Videos/%(title)s.%(ext)s'"
alias ytdla="yt-dlp -o '$(wslpath $(wslvar USERPROFILE))/Music/%(title)s.%(ext)s' --ignore-config -x --audio-format mp3"
alias cs="utf8clip.exe"
alias vi="vim"
#alias vim="nvim"
#alias nvim="lvim"
#alias top="btm"
alias fzf="fzf --preview 'bat --color=always --style=numbers --line-range=:500 {}'"

# Git
alias gs="git status"
alias gc="git commit"
alias ga="git add"
alias gps="git push"
alias gpl="git pull"
alias gplom="git pull origin master"
alias gpuom="git push origin master"
alias gd="git diff"
alias gdd="git diff --name-only --relative --diff-filter=d | xargs bat --diff"
alias gch="git checkout"
alias gcb="git checkout -b"
alias gac="git add . && git commit"
alias grs="git restore --staged ."
alias gre="git restore"
alias grh="git reset --hard"
alias gr="git remote"
alias gcl="git clone"
alias gt="git ls-tree -r master --name-only"
alias gb="git branch"
alias gf="git fetch"
alias gig="git ls-files -io --exclude-standard"
alias gl="git log --graph --decorate --all --date=human --pretty=format:'%C(green)%h%C(yellow) -- %C(cyan)%ad %C(yellow)(%ar)%C(bold green)%d %C(white)%s %C(brightblue)[%cn]%C(reset)'"

# Dev
alias run="gcc -g3 -Wall -Werror -Wextra *.c && ./a.out"
alias norm="norminette -R CheckForbiddenSourceHeader"
alias vg="valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes"
alias vgtc="vg --trace-children=yes"
alias libclone="git clone git@github.com:araggohnxd/libft.git && rm -rf libft/.git* libft/tests"
alias actions="git clone git@github.com:araggohnxd/vogsphere-github-actions.git && mkdir -p .github/workflows && mv vogsphere-github-actions/main.yaml .github/workflows && rm -rf vogsphere-github-actions"

# Utilities
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias update="dotfiles pull && yay -Syu --noconfirm && z4h update"
alias nrc="nano ~/.zshrc"
alias nal="nano ~/.zsh/aliases"
alias nfn="nano ~/.zsh/functions"
alias gnbb="gnb | tr -d '\n' | cs"
alias top10='print -l ${(o)history%% *} | uniq -c | sort -nr | head -n 10'
alias workspace="ssh workspace -p"
